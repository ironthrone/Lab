<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="WithACircleView">
        <attr name="circle_color" format="color|reference" />
    </declare-styleable>
    <declare-styleable name="RoundImageView">
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TextImageView">
        <attr name="image" format="reference" />
        <attr name="text" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="reference" />
    </declare-styleable>
    
    <declare-styleable name="ProgressView">
        <attr name="rangeWidth" format="dimension" />
        <attr name="backgroundColor" format="reference" />
        <attr name="progressColor" format="reference" />
        <attr name="speed" format="integer" />
    </declare-styleable>
    <declare-styleable name="SpiralBalls">
        <attr name="point_color" format="color" />
    </declare-styleable>
    <declare-styleable name="BroadcastView">
        <attr name="ringRadius" format="dimension" />
        <attr name="ringWidth" format="dimension" />
    </declare-styleable>
</resources>