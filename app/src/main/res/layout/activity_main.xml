<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guo.lab.MainActivity">

    <Button
        android:id="@+id/horizontal_scroll"
        android:text="horizontalscroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/layout_animation"
        android:text="layoutanimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/property_animator"
        android:text="PropertyAnimator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/remote_view"
        android:text="remoteView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/recycler"
        android:text="recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.guo.lab.ScrollerView
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <com.guo.lab.WithACircleView
        app:circle_color="@color/colorPrimary"
        android:padding="20dp"
        android:background="@color/colorAccent"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <com.guo.lab.WithACircleView
        app:circle_color="@color/colorPrimary"
        android:background="@color/colorAccent"
        android:layout_width="100dp"
        android:layout_height="100dp" />
</LinearLayout>
