<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.guo.lab.MainActivity">

        <Button
            android:id="@+id/horizontal_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="horizontalscroll" />



        <Button
            android:id="@+id/remote_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="remoteView" />

        <Button
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="recycler" />
        <Button
            android:id="@+id/layout_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="layoutanimation" />
        <Button
            android:id="@+id/layout_transition"
            android:onClick="@{clickListener}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="layouttransition" />

        <Button
            android:id="@+id/property_animator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PropertyAnimator" />

        <Button
            android:id="@+id/spring_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="springanimation" />
        <Button
            android:id="@+id/canvas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="canvas" />

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/custom_progress_drawabel"
            android:progress="50"
            android:secondaryProgress="80"
            android:max="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.guo.lab.scroll.ScrollerView
            android:layout_width="match_parent"
            android:layout_height="400dp" />

        <com.guo.lab.view.WithACircleView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorAccent"
            android:padding="20dp"
            app:circle_color="@color/colorPrimary" />

        <com.guo.lab.view.WithACircleView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorAccent"
            app:circle_color="@color/colorPrimary" />
    </LinearLayout>
</layout>
