<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.guo.lab">

    <application
        android:name=".LabApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- android:configChanges="orientation|screenSize" -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HorizontalPagerActivity" />
        <activity android:name=".anim.LayoutAnimationActivity" />
        <activity android:name=".anim.AnimatorActivity" />
        <activity android:name=".RecyclerActivity" />

        <receiver
            android:name=".remoteview.ToastReceiver"
            android:enabled="true"
            android:exported="true"></receiver>
    </application>

</manifest>